<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/mainLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <!-- everything you already have -->

            <ImageView
                android:id="@+id/image1"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp" />

            <TextView
                android:id="@+id/tv_product_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="2dp"
                android:text=""
                android:textColor="#FF0066"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tv_product_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="2dp"
                android:text=""
                android:textColor="#FF0066" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:orientation="horizontal">

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="2dp"
                    android:text="ราคาเช่า"
                    android:textColor="#0000CC" />

                <TextView
                    android:id="@+id/tv_product_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="2dp"
                    android:text=""
                    android:textColor="#FF0066" />

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="2dp"
                    android:text="บาท/ต่อ 1 วัน"
                    android:textColor="#0000CC" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_product_img_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="2dp"
                android:text=""
                android:textColor="#FF0066"
                android:visibility="gone" />

            <Spinner
                android:layout_marginRight="40dp"
                android:layout_marginLeft="40dp"
                android:id="@+id/driverSpinner"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

            <LinearLayout
                android:layout_marginRight="40dp"
                android:layout_marginLeft="40dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <!--Start-->
                    <TextView
                        android:id="@+id/txtStart"
                        android:textStyle="bold"
                        android:text="(lat, lng)"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <!--End-->
                    <TextView
                        android:id="@+id/txtEnd"
                        android:textStyle="bold"
                        android:text="(lat, lng)"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <!--Setting-->
                <Button
                    android:id="@+id/btnSetMap"
                    android:layout_weight="1"
                    android:text="Set Map"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

            </LinearLayout>


            <EditText
                android:id="@+id/tv_stat_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:ems="10"
                android:gravity="center"
                android:hint="วันที่จะใช้รถ"
                android:textColor="#0000CC" />

            <EditText
                android:id="@+id/tv_end_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:ems="10"
                android:gravity="center"
                android:hint="วันที่จะส่งรถคืน"
                android:textColor="#0000CC"
                android:visibility="gone" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="2dp"
                    android:text="จำนวนวันที่จะเช่า" />


                <TextView
                    android:id="@+id/tv_NumberPicker"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="1"
                    android:textSize="25dp"
                    android:visibility="gone" />

                <NumberPicker
                    android:id="@+id/np"
                    android:layout_width="wrap_content"
                    android:layout_height="120dp"
                    android:layout_gravity="center"
                    android:textColor="#FF0066" />


            </LinearLayout>

            <EditText
                android:id="@+id/tv_product_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:ems="10"
                android:gravity="center"
                android:hint="amount"
                android:textColor="#0000CC"
                android:visibility="gone" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <Button
                    android:layout_weight="1"
                    android:id="@+id/b_Cancel_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Cancel"
                    android:textSize="15dp" />

                <Button
                    android:layout_weight="1"
                    android:id="@+id/b_Action_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="(ยืนยัน)"
                    android:textSize="15dp" />

            </LinearLayout>


        </LinearLayout>

    </ScrollView>


</LinearLayout>

